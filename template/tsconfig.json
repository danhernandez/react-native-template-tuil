{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@domains/*": ["src/domains/*"],
      "@app/*": ["src/app/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "src/*",
    "index.js",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "*.js"
  ]
}
